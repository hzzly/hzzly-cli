#!/usr/bin/env node

const program = require('commander');
const version = require('../package.json').version;

if (process.argv.slice(2).join('') === '-v') { // [ '/usr/local/Cellar/node/8.6.0/bin/node', '/usr/local/bin/hzzly_r', '-v' ]
  console.log(`hzzly_r: ${version}`);
  return;
}

program
  .version(version)
  .usage('<command> [options]')
  .command('init', 'generate a new project from a template')
  // .on('--help', printHelp)
  .parse(process.argv)

